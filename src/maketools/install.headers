#! /bin/bash
# cd ../../src ; tar cf - */*.h */*/*.h | tar xf - -C "$(DESTDIR)$(includedir)/$(program_name)/"

cd ../../src

where="$1"
shift

script=""
includedir=
for dir in $*
do
script="$script"'
s|^# *include *"'$dir'/|#include "../'$dir'/|'
done
export LC_ALL=C

for file in */*.h
do
  mkdir -p "$where/${file%/*}"
  cat $file | sed "$script" > "$where/$file"
done
