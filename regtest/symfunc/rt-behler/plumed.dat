cmat: CONTACT_MATRIX GROUP=1-64 SWITCH={COSINE R_0=4.5} COMPONENTS
g1: G1 WEIGHT=cmat.w
g2: G2 WEIGHT=cmat.w VECTORS1=cmat.x VECTORS2=cmat.y VECTORS3=cmat.z NU=1 CENTER=3
g3: G3 WEIGHT=cmat.w VECTORS1=cmat.x VECTORS2=cmat.y VECTORS3=cmat.z KAPPA=1

g1m: COMBINE ARG=g1 NORMALIZE PERIODIC=NO 
g2m: COMBINE ARG=g2 NORMALIZE PERIODIC=NO
g3m: COMBINE ARG=g3 NORMALIZE PERIODIC=NO

RESTRAINT ARG=g1m,g2m,g3m AT=1.5,1.4,-1.5 KAPPA=10,10,10

PRINT ATOMS=g1 ARG1=g1 ARG2=g2 ARG3=g3 FILE=symmetry-functions.xyz FMT=%8.4f 

g1s: G1 ONESHOT WEIGHT=cmat.w
g2s: G2 ONESHOT WEIGHT=cmat.w VECTORS1=cmat.x VECTORS2=cmat.y VECTORS3=cmat.z NU=1 CENTER=3
g3s: G3 ONESHOT WEIGHT=cmat.w VECTORS1=cmat.x VECTORS2=cmat.y VECTORS3=cmat.z KAPPA=1

g2sm: COMBINE ARG=g2 NORMALIZE PERIODIC=NO

PRINT ATOMS=g1 ARG1=g1s ARG2=g2s ARG3=g3s FILE=symmetry-functions-oneshot.xyz FMT=%8.4f
DUMPDERIVATIVES ARG=g2m,g2sm FILE=deriv FMT=%8.4f
